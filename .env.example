# Copy to .env and set values. Do not commit secrets.

NODE_ENV=development
DATABASE_URL=postgresql://USER:PASSWORD@localhost:5432/DB_NAME
# CI / local test Postgres (used by GitHub Actions)
DATABASE_URL_CI=postgresql://postgres:postgres@localhost:5432/agri_hidro_test

# JWT (required for token auth)
JWT_SECRET=

# PostgreSQL (used by Docker Compose)
POSTGRES_DB=agri_hidro
POSTGRES_USER=postgres
POSTGRES_PASSWORD=

# Cloudflare Tunnel (optional; only if using cloudflared service)
# CLOUDFLARE_TUNNEL_TOKEN=

# Firebase Admin (optional; for FCM when tandon status changes to refill/full)
# Copy from service account JSON: project_id, client_email, private_key (keep \n as literal or use real newlines)
# FIREBASE_PROJECT_ID=
# FIREBASE_CLIENT_EMAIL=
# FIREBASE_PRIVATE_KEY=
